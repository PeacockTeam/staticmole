#main_view
    margin-left: 100px;
#spinner
    width: 1000px;
    height: 600px;
    float: left;

#gitInputBlock
    float: left;
    display: block;

#report
    width: 600px;
    height 400px;

#reports
    float: right;
    font-family: 'Trebuchet MS', 'Lucida Grande', Verdana, Lucida, Geneva, Helvetica, Arial, sans-serif;
    background-color: #90bade;
    color: #333;

#outputBlock
    display: block;
    height 400px;

#reports ul 
    list-style: none;
    margin: 0;
    padding: 0;
    border: none;

#reports li
    border-bottom: 1px solid #90bade;

#reports li a 
    display: block;
    background-color: #2175bc;
    color: #fff;
    text-decoration: none;

#reports li a:hover
    background-color: #2586d7;
    color: #fff;
